<h2>Newest Items:</h2>
<div class="row">
  <ul style="list-style-type:none">
    <% @products.each do |product| %>
      <li>
        <div class="col-md-4">
        <img id="product_thumb" src="<%= product.image %>">
        <br>
        <br>
          <div class="well">
            <b><%= product.name %></b>
            <br>
            $<%= product.cost %>.00
            <br>
            <em>sku#: </em><%= product.id %>
            <br>
            <%= link_to "View Details", product_path(product) %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<h2>Best Bargains:</h2>
<div class="row">
<ul style="list-style-type:none">
  <% @lowcost.each do |product| %>
