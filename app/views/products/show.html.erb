<div class="col-md-4">

  <h1><%= @product.name %></h1>
  <img src="<%= @product.image %>">
  <br>
  <br>
  <button class="btn"><%= link_to "Edit Details", edit_product_path(@product) %></button>

  <button class="btn">
  <%= link_to "Delete Product", product_path(@product),
                    :data => {:confirm => "Are you sure?",
                    :method => "delete"} %></button>
  <br>
  <br>
  <br>
  <button class="btn btn-info">
    <%= link_to "Return Home", products_path %></button>
</div>

<div class="col-md-8">
  <h3>Product Reviews:</h3>
  <% @reviews.each do |review| %>
    <li style="list-style: none;">
      <div class="well">
        <b><%= review.author %></b>
        <br>
        <%= review.content_body %>
      </div>
    </li>
  <% end %>
</div>
</div>
